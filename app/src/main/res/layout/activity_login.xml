<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    tools:context="jmcoydxlg.packbooks.LoginActivity">
    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="206dp"
                android:layout_height="217dp"
                android:layout_gravity="center"
                android:src="@drawable/packbooksv3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/login_correoET"
                android:hint="Correo"/>

            <EditText
                android:id="@+id/login_contrasenaET"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="ContraseÃ±a"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/login_loginBT"
                android:background="#945400"

                android:layout_marginTop="9px"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:onClick="IniciarSesion"
                android:text="Login"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/login_registrarBT"
                android:layout_marginTop="9px"
                android:background="#445500"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:onClick="CrearCuenta"
                android:text="Registrar"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
